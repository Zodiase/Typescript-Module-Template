{
    "compilerOptions": {
        "strict": true,
        "module": "CommonJS",
        "rootDir": "src",
        "outDir": "build",
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "target": "ES2019"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "src/**/*.spec.ts"]
}
